[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = calamares-biglinux
Target = grub

[Action]
Description = Restoring Community GRUB theme
When = PostTransaction
Exec = /usr/bin/bash -c 'sed -i "s|GRUB_THEME=.*|GRUB_THEME=\"/boot/grub/themes/community/theme.txt\"|g" /etc/default/grub && if command -v update-grub >/dev/null; then update-grub; else grub-mkconfig -o /boot/grub/grub.cfg; fi'
